<%%= form_for(@<%= rails_model_name %>) do |f| %>
  <%% if @<%= rails_model_name %>.errors.any? %>
    <div id="error_explanation">
      <h2><%%= pluralize(@<%= rails_model_name %>.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
        <%% @<%= rails_model_name %>.errors.full_messages.each do |msg| %>
        <li><%%= msg %></li>
      <%% end %>
      </ul>
    </div>
  <%% end %>

  <fieldset>
    <% attributes.each do |attribute| -%>
      <div>
        <%%= f.label :<%= attribute.name %> %>
        <%%= f.<%= attribute.field_type %> :<%= attribute.name %> %>
      </div>
    <% end -%>
  </fieldset>

  <%%= f.submit class: "action submit" %>
<%% end %>

